  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      height: 2000px; /* just for scrolling */
    }

    /* Navigation menu */
    nav {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      background: transparent;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 30px;
      transition: background 0.3s, box-shadow 0.3s;
      z-index: 1000;
    }

    nav.scrolled {
      background: #222;
      box-shadow: 0 2px 5px rgba(0,0,0,0.3);
    }

    .logo {
      color: violet;
      font-size: 22px;
      font-weight: bold;
      text-decoration: none;
    }

    nav ul {
      list-style: none;
      display: flex;
      gap: 30px;
      margin: 0;
      padding: 0;
    }

    nav ul li a {
      text-decoration: none;
      color: orange;
      font-size: 18px;
      transition: color 0.3s, border-bottom 0.3s;
    }

    nav ul li a:hover {
      color: #ff9800;
      border-bottom: 2px solid #ff9800;
    }

    /* Hamburger Menu */
    .menu-toggle {
      display: none;
      flex-direction: column;
      cursor: pointer;
    }

    .menu-toggle span {
      height: 3px;
      width: 25px;
      background: white;
      margin: 4px 0;
      transition: 0.3s;
    }

    /* Responsive */
    @media (max-width: 768px) {
      nav ul {
        position: fixed;
        top: 60px;
        left: -100%;
        background: #222;
        flex-direction: column;
        width: 100%;
        height: 100vh;
        justify-content: center;
        align-items: center;
        transition: left 0.3s ease;
      }

      nav ul.active {
        left: 0;
      }

      .menu-toggle {
        display: flex;
      }
    }

    /* Header sections */
    header {
      height: 100vh;
      background: linear-gradient(to right, #6a11cb, #2575fc);
      display: flex;
